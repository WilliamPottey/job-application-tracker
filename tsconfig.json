{
  "compilerOptions": {
    "target": "ES2020",                  // Modern JS features
    "module": "Node16",                  // Must match moduleResolution
    "moduleResolution": "Node16",        // Modern Node ESM resolution
    "esModuleInterop": true,             // Allows `import express from 'express'`
    "forceConsistentCasingInFileNames": true, 
    "strict": true,                      // Type safety
    "skipLibCheck": true,                // Skip type checking of node_modules
    "outDir": "./dist",                  // Where compiled JS will go
    "rootDir": "./src",                  // Source folder
    "resolveJsonModule": true,           // Allows importing JSON files
    "noImplicitAny": true,               // Catch untyped variables
    "strictNullChecks": true,            // Enforce null checks
    "strictFunctionTypes": true,         // Check function assignability
    "noUnusedLocals": true,              // Warn on unused locals
    "noUnusedParameters": true,          // Warn on unused parameters
    "verbatimModuleSyntax": true

  },
  "include": ["src/**/*"],               // Include all TS files in src
  "exclude": ["node_modules", "dist"]    // Exclude node_modules and output folder
}
